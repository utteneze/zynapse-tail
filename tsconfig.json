{
    "exclude": [
        "./coverage",
        "./dist",
        "__tests__",
        "jest.config.js",
        "eslint.config.js",
        "./node_modules"
    ],
    "ts-node": {
        "transpileOnly": true,
        "files": true,
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./src",
        "moduleResolution": "node",
        "lib": ["ES2021"],
        "checkJs": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "paths": {
            "@apps/*": ["./src/apps/*"],
            "@shared/*": ["./src/shared/*"]
        }
    }
}
